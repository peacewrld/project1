@model IEnumerable<project1_4.Models.Account.Account>

@{
    ViewData["Title"] = "MyAccount";
}

<link href="https://fonts.googleapis.com/css?family=Open+Sans+Condensed:300&display=swap" rel="stylesheet">

<style>
    body{
        background-image: url('https://images.pexels.com/photos/62693/pexels-photo-62693.jpeg?cs=srgb&dl=-62693.jpg&fm=jpg');
        font-family: 'Open Sans Condensed', sans-serif;
    }
    #button-operations {
        padding-left: 20px;
        padding-right: 20px;
        padding-top: 10px;
        padding-bottom: 10px;
        margin-right: 8px;
        border-radius: 5px;
        background-color: cadetblue;
        color: floralwhite;
        opacity: 0.7;
    }

    #button-operations:hover {
        cursor: pointer;
        color: white;
        text-decoration: none;
        opacity: 1;
    }
    th,td {
        font-family: 'Open Sans Condensed', sans-serif;
    }
    th{
        background-color:cadetblue;
        opacity: 0.8;   
    }
    .table{
        margin-top: 20px;
        border: 1px solid cadetblue;
        background-color: white;
    }

    #button-operate{
        color: cadetblue;
        opacity: 0.8;
        border-radius: 10px;
        padding-left: 5px;
        padding-right: 5px;
    }
    #button-operate:hover{
        opacity: 1;
        color: black;
        text-decoration: none;
        font-weight: 500;
    }
</style>

<body>
    <h2 style="margin-top: 50px; margin-bottom: 20px; font-family: 'Open Sans Condensed', sans-serif;">My Accounts</h2>

    <p>
        <a id="button-operations" asp-action="Create">Create New Account</a>
        <a id="button-operations" asp-action="Operations">Perform Operations</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.AccountType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AccountNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoutingNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Balance)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Interest)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.isActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreateDate)
                </th>
                <th>
                    Term/Payoff Date
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountType)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AccountNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoutingNumber)
                    </td>
                    <td>
                        $@Html.DisplayFor(modelItem => item.Balance)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Interest)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isActive)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreateDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CloseDate)
                    </td>
                    <td>
                        <a id="button-operate" asp-action="Transaction" asp-route-id="@item.Id">Transaction</a> |
                        <a id="button-operate" asp-action="AccountDetails" asp-route-id="@item.Id">Details</a> |
                        <a id="button-operate" asp-action="Close" asp-route-id="@item.Id">Close</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>